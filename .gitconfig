[user]
	name = "Tsvetozar Bonev"
	email = tsbonev@gmail.com
[core]
	editor = vim
[alias]
	st = status
	tb = !git rev-parse --abbrev-ref HEAD
	pot = "!f() { git push origin $( git rev-parse --abbrev-ref HEAD; ); }; f"
	potf = "!f() { git push origin $( git rev-parse --abbrev-ref HEAD; ) --force; }; f"
	ci = commit
	cm = commit -m
	co = checkout
	cob = checkout -b
	cop = checkout @{-1}
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	rebi = "!f() { git rebase -i HEAD~$1; }; f"
	rbc = rebase --continue
	rba = rebase --abort
	r = !git l -20
	ra = !git r -a
	rv = remote -v
	rs = remote set-url
	rad = remote add
	ff = merge -ff-only
	pullff = pull -ff-only
	noff = merge --no-ff
	l = log --graph --abbrev-commit --date=relative
	lp = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	lpr = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	la = !git l -a
	alias = !git config -l | grep alias | cut -c 7-
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	pom = push origin master
	b = branch
	ds = diff --stat=160,120
	sync = !git fetch upstream && git rebase upstream/master
	synco = !git fetch origin && git rebase origin/master
[merge]
tool = vimdiff
